<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js"
      integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/material-icons@1.13.14/iconfont/material-icons.min.css"
    />
    <title>School control Subjects</title>
  </head>
  <body>
    <div class="container">
      <div class="row mb-3">
        <!--La NavBar-->
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">School Control</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#"
                    >Home</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item dropdown">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    Dropdown
                  </a>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li>
                      <a class="dropdown-item" href="#">Another action</a>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                      <a class="dropdown-item" href="#">Something else here</a>
                    </li>
                  </ul>
                </li>
                <li class="nav-item">
                  <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                </li>
              </ul>
              <form class="d-flex" role="search">
                <input
                  class="form-control me-2"
                  type="search"
                  placeholder="Search"
                  aria-label="Search"
                />
                <button class="btn btn-outline-success" type="submit">
                  Search
                </button>
              </form>
            </div>
          </div>
        </nav>
      </div>
      <div class="row">
        <div class="col lg-5">
          <div class="card">
            <div class="card-body">
              <form
                class="action"
                method="post"
                action="/api/subjects/insertOne"
              >
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtSubjectId" class="form-label"
                      >ID</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="txtSubjectId"
                      name="subject_id"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtName" class="form-label">Nombre</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtName"
                      name="name"
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtUnits" class="form-label"
                      >Unidades</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="txtUnits"
                      name="units"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtCredits" class="form-label">Creditos</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtCredits"
                      name="credits"
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtSemester" class="form-label">Semestre</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtSemester"
                      name="semester"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtHoursPerWeek" class="form-label">Horas x Semana</label>
                    <input
                      type="number"
                      class="form-control"
                      id="txtHoursPerWeek"
                      name="hours_per_week"
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-3">
                    <button type="submit" class="btn btn-primary mt-3">
                      Guardar
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-7">
          <!--Tabla de datos-->
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Unidades</th>
                <th>Creditos</th>
                <th>Semestre</th>
                <th>Horas</th>
                <th colspan="2">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% subjects.forEach(subject => { %>
              <tr>
                <td><%= subject.subject_id %></td>
                <td><%= subject.name %></td>
                <td><%= subject.units %></td>
                <td><%= subject.credits %></td>
                <td><%= subject.semester %></td>
                <td><%= subject.hours_per_week %></td>
                <td>
                  <a
                    href="/api/subjects/getOne/<%= subject.subject_id %>"
                    class="btn btn-warning btn-sm"
                    n
                    ><i class="material-icons"> edit </i></a
                  >
                </td>
                <td>
                  <a
                    href="/api/subjects/deleteOne/<%= subject.subject_id %>"
                    class="btn btn-danger btn-sm"
                    ><i class="material-icons"> delete </i></a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
